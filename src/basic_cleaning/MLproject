name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: 'input for artifact name: file(*.csv)'
        type: str

      output_artifact:
        description: 'output for artifact name: file(*.csv)'
        type: str

      output_type:
        description: output for artifact type
        type: str

      output_description:
        description: output for artifact description
        type: str

      min_price:
        description: minimum price for outlier range
        type: float

      max_price:
        description: maximum price for outlier range
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  \
                       --output_artifact {output_artifact}  \
                       --output_description {output_description} \
                       --output_type {output_type}  \
                       --min_price {min_price}  \
                       --max_price {max_price} 

